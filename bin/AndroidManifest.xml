<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.example.sapientia"
	android:versionCode="1"
	android:versionName="1.0" >

	<uses-sdk
		android:minSdkVersion="8"
		android:targetSdkVersion="19" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme" >
		<activity
			android:name="com.example.sapientia.ui.sapientia_Activity"
			android:label="@string/app_name"
			android:launchMode="singleTask" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
			    <action android:name="android.intent.action.VIEW" />
			    <category android:name="android.intent.category.DEFAULT"/>
			    <data android:mimeType="text/plain"/>
			</intent-filter>
		</activity>
		<activity
			android:name="com.example.sapientia.ui.main_activity"
			android:launchMode="singleTask"
			android:windowSoftInputMode="adjustPan|stateHidden" />
		<activity
			android:name="com.example.sapientia.ui.loginActivity"
			android:launchMode="singleTask"
			android:windowSoftInputMode="adjustPan|stateHidden" />
		<activity
			android:name="com.example.sapientia.ui.signUpActivity"
			android:launchMode="singleTask"
			android:windowSoftInputMode="adjustPan|stateHidden" />
		<activity
			android:name="com.example.sapientia.ui.searchActivity"
			android:launchMode="singleTask"
			android:windowSoftInputMode="adjustPan|stateHidden" />
		<activity
			android:name="com.example.sapientia.ui.readerActivity"
			android:launchMode="singleTask"
			android:windowSoftInputMode="adjustPan|stateHidden" />
		<activity
			android:name="com.example.sapientia.ui.settingActivity"
			android:launchMode="singleTask"
			android:windowSoftInputMode="adjustPan|stateHidden" />
		<activity
			android:name="com.example.sapientia.ui.sendStateActivity"
			android:launchMode="singleTask" />
	</application>

</manifest>